            EOL                                 =  nl
            PLUS                                =  '+'
            MINUS                               =  '-'
            MULTIPLY                            =  '*'
            DIVIDE                              =  '/'
            EXP                                 =  '**'
            AND                                 =  '&'
            OR                                  =  '|'
            XOR                                 =  '^'
            CONSTANT                            =  *FLOAT | *FLOAT !(ANY('eE') !(ANY('-+')) *INTEGER)
            FLOAT                               =  *INTEGER | *INTEGER !('.' *INTEGER) | '.' *INTEGER
            INTEGER                             =  %*DIGIT
            DIGIT                               =  ANY('0123456789')
            ID                                  =  %*LETTER !%(*DIGIT | *LETTER)
            LETTER                              =  ANY('abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ')
            one_line                            =  *logical *EOL | *EOL | $' ' RPOS(0)
            logical                             =  *sum !%((*AND | *OR | *XOR) *sum)
            sum                                 =  *term !%((*PLUS | *MINUS) *term)
            term                                =  *exp !%((*MULTIPLY | *DIVIDE) *exp)
            exp                                 =  *unary !%(*EXP *exp)
            unary                               =  *MINUS *element | *element
            element                             =  *CONSTANT | *function | $'(' *logical $')'
            function                            =  *ID $'(' !(*logical !%($',' *logical)) $')'
